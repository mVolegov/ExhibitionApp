<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExhibitionApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExhibitionApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <navigation>
            <ul class="nav nav-pills flex-column mb-auto">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand text-white" asp-area="" asp-controller="Exhibit" asp-action="GetAllExhibits">Работник склада 1</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item mx-1">
                                    <a 
                                        class=@(ViewContext.RouteData.Values["controller"].ToString() == "Exhibit" ? 
                                                  "nav-link text-white active" : "nav-link text-white")
                                        asp-area="" 
                                        asp-controller="Exhibit" 
                                        asp-action="GetAllExhibits">
                                        Экспонаты
                                    </a>
                                </li>
                                <li class="nav-item mx-1">
                                    <a class=@(ViewContext.RouteData.Values["controller"].ToString() == "Author" ?
                                       "nav-link text-white active" : "nav-link text-white")
                                       asp-area=""
                                       asp-controller="Author"
                                       asp-action="GetAllAuthors">
                                        Авторы
                                    </a>
                                </li>
                                <li class="nav-item mx-1">
                                    <a class=@(ViewContext.RouteData.Values["controller"].ToString() == "Address" ?
                                                 "nav-link text-white active" : "nav-link text-white") 
                                       asp-area="" 
                                       asp-controller="Address"
                                       asp-action="GetAllAddresses">
                                        Адреса
                                    </a>
                                </li>
                                <li class="nav-item mx-1">
                                    <a class=@(ViewContext.RouteData.Values["controller"].ToString() == "Warehouse" ?
                                       "nav-link text-white active" : "nav-link text-white")
                                       asp-area=""
                                       asp-controller="Warehouse"
                                       asp-action="GetAllWarehouses">
                                        Склады
                                    </a>
                                </li>
                            </ul>
                        </div>
                        
                        <div class="text-end">
                            <li class="nav-item mx-1">
                                <a class=@(ViewContext.RouteData.Values["controller"].ToString() == "ReferenceTable" ?
                                             "nav-link text-white active" : "nav-link text-white")
                                   asp-area="" 
                                   asp-controller="ReferenceTable" 
                                   asp-action="GetAllExtraTables">
                                    Справочники
                                </a>
                            </li>
                        </div>
                    </div>
                </nav>
            </ul>
        </navigation>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ExhibitionApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
