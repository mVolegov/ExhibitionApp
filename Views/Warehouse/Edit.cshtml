@model ExhibitionApp.Models.Warehouse

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h3>Обновление данных склада под номером: @ViewBag.WarehouseId</h3>
</div>

<form asp-action="Edit">
    <div class="row g-4 mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>
        <div class="col-sm-2"></div>
        <div class="col-sm-2 pe-3">
            <label asp-for="Area" class="control-label"></label>
            <input type="number" step="0.01" min="0.01" asp-for="Area" class="form-control"/>
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="AddressId" class="control-label"></label>
            <select asp-for="AddressId" class="form-control" asp-items="ViewBag.Addresses"></select>
            <span asp-validation-for="AddressId" class="text-danger"></span>
        </div>
        <div class="col-sm-2"></div>

        <div class="text-center mt-4">
            <input type="submit" value="Сохранить изменения" class="btn btn-primary"/>
        </div>
        <div class="text-center my-4">
            <a class="btn btn-outline-warning" asp-action="GetAllWarehouses">Отмена</a>
        </div>
    </div>
</form>



@section Scripts {
}
