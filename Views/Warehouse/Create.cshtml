@model ExhibitionApp.Models.Warehouse

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h3>Добавление нового склада</h3>
</div>

<div class="mt-3">
    <a class="btn btn-outline-primary" asp-action="GetAllWarehouses"><b>&#8592</b> Назад к списку складов</a>
</div>


<form asp-action="Create">
    <div class="row g-2 mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-sm-2"></div>
        <div class="col-sm-6">
            <label asp-for="AddressId" class="control-label"></label>
            <select asp-for="AddressId" class="form-control" asp-items="ViewBag.Addresses"></select>
        </div>

        <div class="col-sm-2">
            <label asp-for="Area" class="control-label"></label>
            <input type ="number" step="0.01" min="0.01" asp-for="Area" class="form-control" />
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>
        <div class="col-sm-2"></div>

        <div class="text-center mt-5">
            <input type="submit" value="Добавить" class="btn btn-outline-success"/>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
