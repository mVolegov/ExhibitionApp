@model IEnumerable<ExhibitionApp.Models.Sex>

@{
    ViewData["Title"] = "GetAllSexes";
}

<div class="text-center">
    <h1>Классификатор ОКИН Фасет 01 </h1>
    <h6 class="mb-3">ОКИН — Общероссийский классификатор информации о населении</h6>
</div>

<div>
    <a class="btn btn-primary mb-3" asp-action="GetAllExtraTables"><b>&#8592</b> Назад к списку классификаторов</a>
</div>

<div class="card">
    <table class="table text-center table-striped table-hover table-borderless">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>