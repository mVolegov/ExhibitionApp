@model IEnumerable<ExhibitionApp.Models.ExhibitType>

@{
    ViewData["Title"] = "GetAllExhibitTypes";
}

<div class="text-center">
    <h1>Классификатор ТН ВЭД </h1>
    <h6 class="mb-3">Произведения искусства, предметы коллекционирования и антиквариат </h6>
</div>

<div>
    <a class="btn btn-primary mb-3" asp-action="GetAllExtraTables"><b>&#8592</b> Назад к списку классификаторов</a>
</div>

<div class="card">
    <table class="table table-striped table-borderless table-hover">
        <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Id)*@
                Код типа
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeName)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr class="mx-5">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeName)
                </td>
                @*<td>*@
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                @*</td>*@
            </tr>
        }
        </tbody>
    </table>
</div>