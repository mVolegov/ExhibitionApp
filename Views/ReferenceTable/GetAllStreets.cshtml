@model IEnumerable<ExhibitionApp.Models.Street>

@{
    ViewData["Title"] = "GetAllStreets";
}

<div class="text-center">
    <h1>Классификатор КЛАДР</h1>
    <h6 class="mb-3">КЛАДР - классификатор адресов Российской Федерации</h6>
</div>

<div>
    <a class="btn btn-primary mb-3" asp-action="GetAllExtraTables"><b>&#8592</b> Назад к списку классификаторов</a>
</div>

<div class="card">
    <table class="table text-center table-striped table-borderless table-hover">
        <thead>
        <tr>
            <th>
                Код улицы
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>