@{
    ViewData["Title"] = "Авторизация";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="container">
    <div class="row g-2 mt-3">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 card mt-5" id="outer">
            <div>
                <h1 class="text-center m-5">Информационная система для учета экспонатов выставок</h1>
                <form method="post">
                    
                    <div class="row g-2 mt-3">

                        <div class="col-sm-2"></div>
                        <div class="form-group col-sm-8">
                            <label for="username" class="control-label">Имя пользователя:</label>
                            <input id="username" name="login" type="text" class="form-control" required/>
                        </div>
                        <div class="col-sm-2"></div>
                        
                        <div class="col-sm-2"></div>
                        <div class="form-group col-sm-8 mt-3">
                            <label for="password" class="control-label">Пароль:</label>
                            <input id="password" class="form-control" name="password" type="password" required/>
                        </div>
                        <div class="col-sm-2"></div>

                        <div>
                            <div asp-validation-summary="ModelOnly"></div>
                        </div>

                        <div class="text-center my-5">
                            <input class="btn btn-success" type="submit" value="Вход"/>
                        </div>
                    </div>
                </form>

            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>